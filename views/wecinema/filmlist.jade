extends ./layout

block title
        title 电影票友



block prepend body

    //wrap
    div.wrap
        div.tabs.movietabs
            div.flexbox
                div.city 
                    a(href="#") 北京
                        i.demo-icon.icon-down-open-mini
                ul.flex.flexbox#menutop
                    li.curr.flex._hot(data-type="hot") 正在上映
                    li.flex._coming(data-type="coming") 即将上映
        div.addimg.fmaddimg

        if (data && !data.err && data.movies)
            section.movielist
                ul
                    each movie, index in data.movies
                        li.flexbox(data-url="/110000/ticket/#{movie.movieID}")
                            div.picmid
                                a(href="javascript:;")
                                    img(src="#{movie.movieImage}")
                            div.txtmid.flex 
                                a(href="javascript:;")
                                    h2 #{movie.movieNameCN}
                                        span #{movie.movieVersions}
                                        span.curr 巨幕
                                    p #{movie.intro}
                            div.toolmid
                                a(href="javascript:;").btn_buy
                                    span 购票
                                div.btnbar
                                    a(href="/")
                                        i.ico_firend
                                        span 好友买单
                                    a(href="/")
                                        i.ico_redbag
                                        span 邀红包
        div.navtool
             ul.flexbox
                li.flex
                    a(href="/")
                        i.n01 
                        | 头条
                li.flex.newflex.curr 
                    a(href="/11000/filmlist/hot")
                        i.n02 
                        | 电影
                li
                    a(href="/skippop")
                        i.nadd
                li.flex.newflex
                    a(href="javascript:;")
                        i.n03 
                        | 发现
                li.flex
                    a(href="/my/index")
                        i.n04 
                        | 我的




block prepend footer

block prepend script
    script
        | var showtype = "#{data.showtype}";
    script(src="#{data.staticBase}/script/weiticket/common.js?#{data.reversion}")
    script(src="#{data.staticBase}/script/weiticket/filmlist.js?#{data.reversion}")

